

@{
}
<style>
    h1 {
        font-size: 24px;
        color: #333;
    }

    form {
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        margin: 0 auto;
    }

    label {
        display: block;
        font-weight: bold;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="radio"] {
        margin-right: 5px;
    }

    div {
        margin: 10px 0;
    }

    span {
        color: #e74c3c; /* Red color for validation error messages */
        font-size: 12px;
    }

    input[type="submit"] {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #2980b9;
        }
</style>
@model Student

<h1>Add Student Form</h1>

<form asp-controller="Add" asp-action="AddStudent" method="post">

    <div>
        <label asp-for="Id">Id</label>
        <input type="text" asp-for="Id" />
        <span asp-validation-for="Id"></span>
    </div>

    <div>
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Gender">Gender</label>
        <label><input type="radio" asp-for="Gender" value="Male" />Male</label>
        <label><input type="radio" asp-for="Gender" value="Female" />Female</label>
        <span asp-validation-for="Gender"></span>
    </div>

    <div>
        <label asp-for="Faculty">Faculty</label>
        <input type="text" asp-for="Faculty" />
        <span asp-validation-for="Faculty"></span>
    </div>

    <div>
        <label asp-for="Grade">Grade</label>
        <input type="number" asp-for="Grade" />
        <span asp-validation-for="Grade"></span>
    </div>

    <input type="submit" />
</form>
